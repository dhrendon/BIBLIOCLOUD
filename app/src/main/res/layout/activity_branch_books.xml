<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvBranchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventario de Sucursal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvTotalBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de libros: 0"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Libro al Inventario"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Selector de libro -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Libro"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@color/light_brown"/>

                <!-- Ubicaci贸n f铆sica -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Ubicaci贸n F铆sica"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="N煤mero de Anaquel (ej: A-01)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etShelfNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Secci贸n"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <Spinner
                    android:id="@+id/spinnerShelfSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@color/light_brown"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nivel del Anaquel (1-5)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etShelfLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Stock -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Inventario"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Cantidad de Copias F铆sicas">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhysicalStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/cbOnlineAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponible en formato digital"
                    android:layout_marginBottom="16dp"/>

                <!-- Precios -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Precios"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbForSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponible para venta"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Precio de Venta (MXN)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSalePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Precio de Renta (MXN)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRentalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddInventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar al Inventario"
                    app:backgroundTint="@color/colorPrimary"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lista de inventario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Libros en Inventario"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/layoutInventoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Bot贸n volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/colorTextSecondary"/>

    </LinearLayout>
</ScrollView>