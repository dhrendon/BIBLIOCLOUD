<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¢ GestiÃ³n de Sucursales"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nueva Sucursal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Nombre de sucursal -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Nombre de la sucursal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBranchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- âœ… SECCIÃ“N DE UBICACIÃ“N (REEMPLAZA CAMPO DE DIRECCIÃ“N) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ UbicaciÃ³n"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Seleccionar UbicaciÃ³n en el Mapa"
                    android:layout_marginBottom="8dp"
                    app:backgroundTint="@color/accent_brown"
                    app:icon="@android:drawable/ic_menu_mylocation"
                    app:iconGravity="textStart"/>

                <!-- Coordenadas seleccionadas -->
                <TextView
                    android:id="@+id/tvSelectedLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ UbicaciÃ³n no seleccionada"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:background="@color/light_brown"
                    android:layout_marginBottom="8dp"/>

                <!-- DirecciÃ³n obtenida automÃ¡ticamente -->
                <TextView
                    android:id="@+id/tvSelectedAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="@color/light_brown"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

                <!-- TelÃ©fono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="TelÃ©fono">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBranchPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Horario -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Horario">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBranchSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="Lun-Vie: 9:00-20:00, SÃ¡b: 10:00-14:00"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre del Gerente -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Nombre del Gerente (Opcional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etManagerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email del Gerente -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Email del Gerente (Opcional)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etManagerEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- BotÃ³n agregar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Agregar Sucursal"
                    app:backgroundTint="@color/colorPrimary"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconGravity="textStart"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lista de sucursales -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/light_brown">

            <TextView
                android:id="@+id/tvTotalBranches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total de Sucursales: 0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:padding="16dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutBranchesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- BotÃ³n volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/colorTextSecondary"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconGravity="textStart"/>

    </LinearLayout>
</ScrollView>