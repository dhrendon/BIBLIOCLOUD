<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="@color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- EstadÃ­sticas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/light_brown">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalPurchases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total de compras: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="8dp"/>

                    <!-- NUEVO: Monto total (equivalente a tvTotalAmount que requiere updateStatistics) -->
                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monto total: $0.00"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginBottom="8dp"/>

                    <!-- NUEVO: Pendientes -->
                    <TextView
                        android:id="@+id/tvTotalPending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pendientes: 0"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:layout_marginBottom="6dp"/>

                    <!-- NUEVO: Completadas -->
                    <TextView
                        android:id="@+id/tvTotalCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completadas: 0"
                        android:textSize="16sp"
                        android:textColor="@color/green"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- BotÃ³n Ver Tickets -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewAllTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="ðŸŽ« Ver Todos Mis Tickets"
                android:backgroundTint="@color/green"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"/>


            <!-- Filtro por estado -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Filtrar por Estado"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerStatusFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="@color/light_brown"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Lista de compras (para inflar dinÃ¡micamente) -->
            <LinearLayout
                android:id="@+id/layoutPurchasesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <!-- Estado vacÃ­o -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›’"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tienes compras registradas"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextSecondary"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
