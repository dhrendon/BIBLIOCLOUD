<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GestiÃ³n de Libros"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorTextPrimary" />

        <!-- Formulario de Libro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Nuevo Libro"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorTextPrimary" />

        <!-- TÃ­tulo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TÃ­tulo del libro *"
                android:textColorHint="@color/colorTextSecondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Autor -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autor *"
                android:textColorHint="@color/colorTextSecondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- CategorÃ­a -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/spinner_background" />

        <!-- AÃ±o -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="AÃ±o de publicaciÃ³n *"
                android:inputType="number"
                android:textColorHint="@color/colorTextSecondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ISBN -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIsbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ISBN *"
                android:textColorHint="@color/colorTextSecondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/spinner_background" />

        <!-- DescripciÃ³n -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DescripciÃ³n (opcional)"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColorHint="@color/colorTextSecondary" />

        </com.google.android.material.textfield.TextInputLayout>
        <!-- Agregar despuÃ©s del campo de descripciÃ³n -->

        <!-- SecciÃ³n de Foto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto del Libro (Opcional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Vista previa de la foto -->
            <ImageView
                android:id="@+id/ivFotoLibro"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_marginEnd="16dp"
                android:background="@color/light_brown"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camera"
                android:contentDescription="Vista previa foto libro"
                android:clickable="true"
                android:focusable="true" />

            <!-- BotÃ³n para tomar foto -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomarFoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“· Tomar/Elegir Foto"
                android:backgroundTint="@color/accent_brown"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- BotÃ³n Agregar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Agregar Libro"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_brown"
            android:layout_marginBottom="16dp" />

        <!-- Lista de Libros -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CatÃ¡logo de Libros"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorTextPrimary" />

        <LinearLayout
            android:id="@+id/layoutListaLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- BotÃ³n Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â¬… Volver al Dashboard"
            android:backgroundTint="@color/accent_brown"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>