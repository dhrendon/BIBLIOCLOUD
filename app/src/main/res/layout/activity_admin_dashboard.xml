<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorTextPrimary" />

        <!-- Estadísticas Rápidas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Tarjeta Libros -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:backgroundTint="@color/light_brown">

                <TextView
                    android:id="@+id/tvTotalLibros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/dark_brown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Libros"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

            <!-- Tarjeta Usuarios -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:backgroundTint="@color/light_brown">

                <TextView
                    android:id="@+id/tvTotalUsuarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/dark_brown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuarios"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

            <!-- Tarjeta Préstamos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:layout_margin="4dp"
                android:backgroundTint="@color/light_brown">

                <TextView
                    android:id="@+id/tvTotalPrestamos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/dark_brown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Préstamos"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Resto de tu código permanece igual -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGestionUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gestión de Usuarios"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGestionLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gestión de Libros"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGestionPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gestión de Préstamos"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSugerencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Sugerencias de Libros"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="@color/accent_brown"
            android:textSize="14sp"
            android:textColor="@color/white"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</ScrollView>