<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administraci贸n"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Estad铆sticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/light_brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estad铆sticas del Sistema"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalLibros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Libros"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalUsuarios"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuarios"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorTextSecondary"
                    android:layout_marginVertical="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalPrestamos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pr茅stamos"
                            android:textSize="12sp"
                            android:textColor="@color/colorTextSecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalSucursales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sucursales"
                            android:textSize="12sp"
                            android:textColor="@color/colorTextSecondary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalCompras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compras"
                            android:textSize="12sp"
                            android:textColor="@color/colorTextSecondary"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opciones de gesti贸n -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opciones de Gesti贸n"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <!-- Gesti贸n de Usuarios -->
        <Button
            android:id="@+id/btnGestionUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Usuarios"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!-- Gesti贸n de Libros -->
        <Button
            android:id="@+id/btnGestionLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Libros"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!--  Gesti贸n de Sucursales -->
        <Button
            android:id="@+id/btnGestionSucursales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Sucursales"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!-- Gesti贸n de Pr茅stamos -->
        <Button
            android:id="@+id/btnGestionPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Pr茅stamos"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!--  Gesti贸n de Compras -->
        <Button
            android:id="@+id/btnGestionCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Compras"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:padding="16dp"/>

        <!-- Sugerencias -->
        <Button
            android:id="@+id/btnSugerencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Sugerencias"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="24dp"
            android:padding="16dp"/>

        <!-- Cerrar Sesi贸n -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesi贸n"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>