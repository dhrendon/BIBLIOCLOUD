<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- T铆tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gesti贸n de Compras"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Estad铆sticas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/light_brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Estad铆sticas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvTotalOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total de 贸rdenes: 0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTotalRevenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresos totales: $0.00 MXN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvPendingOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rdenes pendientes: 0"
                    android:textSize="16sp"
                    android:textColor="@color/orange"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Filtro por estado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filtrar por Estado"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerStatusFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@color/light_brown"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lista de 贸rdenes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rdenes de Compra"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/layoutPurchasesList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Bot贸n volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:layout_marginTop="16dp"
            app:backgroundTint="@color/colorTextSecondary"/>

    </LinearLayout>
</ScrollView>