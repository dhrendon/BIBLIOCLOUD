<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Préstamos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorTextPrimary" />

        <!-- Formulario de Préstamo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar Nuevo Préstamo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorTextPrimary" />

        <!-- Usuario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Libro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Libro Disponible *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/spinner_background" />

        <!-- Fecha Préstamo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Préstamo *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaPrestamo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/spinner_background"
                android:padding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeleccionarFechaPrestamo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

        <!-- Fecha Devolución -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Devolución *"
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFechaDevolucion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="false"
                android:background="@drawable/spinner_background"
                android:padding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeleccionarFechaDevolucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

        <!-- Botón Realizar Préstamo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRealizarPrestamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Realizar Préstamo"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_brown"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Préstamos Activos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorTextPrimary" />

        <LinearLayout
            android:id="@+id/layoutListaPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp" />

        <!-- Botón Volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬅ Volver al menu"
            android:backgroundTint="@color/accent_brown"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>