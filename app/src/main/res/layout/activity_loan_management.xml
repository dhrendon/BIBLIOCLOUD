<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_brown"
            android:title="Gestión de Préstamos"
            android:titleTextColor="@color/white"
            app:titleTextColor="@color/white" />


        <!-- CARD: Registrar préstamo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/light_brown">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <!-- Spinner Usuario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccione Usuario"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spinnerUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />


                <!-- Spinner Libro -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Seleccione Libro"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spinnerBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />


                <!-- Fecha préstamo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <EditText
                        android:id="@+id/etFechaPrestamo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Fecha Préstamo"
                        android:focusable="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeleccionarFechaPrestamo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elegir" />
                </LinearLayout>


                <!-- Fecha devolución -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <EditText
                        android:id="@+id/etFechaDevolucion"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Fecha Devolución"
                        android:focusable="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeleccionarFechaDevolucion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elegir" />
                </LinearLayout>


                <!-- Botón Realizar Préstamo -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRealizarPrestamo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Registrar Préstamo"
                    android:backgroundTint="@color/dark_brown"
                    android:textColor="@color/white" />

                <!-- Botón Regresar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Volver"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- LISTA DINÁMICA DE PRÉSTAMOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Préstamos Registrados"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/layoutListaPrestamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</ScrollView>
