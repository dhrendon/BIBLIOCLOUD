<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Sugerencias de Libros"
        app:titleTextColor="@color/white" />

    <!-- ðŸ”¥ SCROLL PRINCIPAL para todo el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ========== FORMULARIO DE SUGERENCIA ========== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/layoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœï¸ Sugerir un Nuevo Libro"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- TÃ­tulo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ“– TÃ­tulo del libro *"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Autor -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="âœï¸ Autor *"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- EdiciÃ³n (Opcional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEdition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ“š EdiciÃ³n (opcional)"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- ISBN (Opcional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etIsbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ”¢ ISBN (opcional)"
                            android:inputType="text"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- AÃ±o del Libro (Opcional) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ðŸ“… AÃ±o de publicaciÃ³n (opcional)"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CategorÃ­a -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‚ CategorÃ­a *"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp" />

                    <!-- Comentarios -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etComments"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="top|start"
                            android:hint="ðŸ’¬ Comentarios adicionales (opcional)"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:textColor="@color/colorTextPrimary" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- BotÃ³n para seleccionar/tomar imagen -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“· Agregar Portada (opcional)"
                        app:backgroundTint="@color/dark_brown"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Vista previa de la imagen -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:visibility="gone"
                        android:id="@+id/cardImagePreview">

                        <ImageView
                            android:id="@+id/ivCoverPreview"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="Vista previa de portada" />
                    </androidx.cardview.widget.CardView>

                    <!-- BotÃ³n Enviar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmitSuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="âœ… Enviar Sugerencia"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/colorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ========== SECCIÃ“N: MIS SUGERENCIAS ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/tvMySuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Mis Sugerencias (0)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- ðŸ”¥ RecyclerView con altura fija para que no ocupe todo -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="200dp" />

                <!-- Estado vacÃ­o -->
                <LinearLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No tienes sugerencias"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â¡Sugiere UN libro!\nTu contribuciÃ³n ayuda a mejorar la biblioteca."
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>